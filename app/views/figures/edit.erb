<h1>Edit <%= @figure.name %></h1>

<form method="post" action="/figures/<%= @figure.id %>">
<input id="hidden" type="hidden" name="_method" value="patch">

  <label for="figure_name">Figure Name</label>
  <input type="text" id="figure_name" name="figure[name]" value=" @figure.name ">
  <br>

  <label>Titles</label>
  <% Title.all.each do |title| %>
    <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><%= title.name %>
  <% end %>
  <br>

  <label for="new_title">Create a New Title</label>
  <input type="text" id="new_title" name="title[name]">
  <br>

  <label>Landmarks</label>
  <% Landmark.all.each do |landmark| %>
    <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= 'checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %>
  <% end %>

  <label for="new_landmark">Create a New Landmark</label>
  <input type="text" id="new_landmark" name="landmark[name]">
  <br>

  <input type="submit" value="Edit Figure">

</form>